<h1>Stories</h1>
<% if(stories.length>0){%>
    <div class="row">
        <!-- start of the for loop -->
        <% for(var i=0; i<stories.length; i++){ %>
            <div class="col s12 m4">
                <div class="card">
                    <div class="card-image">
                        <% if(ejsHelper.editIcon(stories[i].user,user).hasValue){%>
                            <a href="/stories/edit/<%= stories[i]._id %>" class="btn-floatinghalfway-fab "><i class="fas fa-edit fa-small"></i></a>
                            <%}%>

                    </div>
                    <div class="card-content center-align">
                        <h5>
                            <%=stories[i].title%>

                        </h5>
                        <p>

                            <%= ejsHelper.stripTags(ejsHelper.truncate(stories[i].body,100))%>
                        </p>
                        <br>
                        <div class="chip">
                            <img src="<%=stories[i].user.image%>" alt="">
                            <a href="/stories/user/<%=stories[i].user._id%>">
                                <%=stories[i].user.displayName%>
                            </a>
                        </div>
                    </div>
                    <div class="card-action center-align">
                        <a href="/stories/<%=stories[i]._id%>" class="btn grey">
                        Read More
                        </a>
                    </div>
                </div>

            </div>

            <!-- end of the for loop -->
            <% } %>
                <%}else{%>
                    there are no stories are there
                    <%}%>

    </div>
<div class="row">
    <div class="col s12 m8">
        <h3>
            <%=story.title%>
                <small> </small>
        </h3>
    </div>

    <div class="card story">
        <div class="card-content">
            <span class="card-title">
                 <%= ejsHelper.formatDate(story.user.creartedAt,"YYYY-MM-DD")%>  
             </span>
            <%= ejsHelper.stripTags(story.body) %>
        </div>
    </div>

    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">
                       <%= story.user.displayName%>
                </span>
                <img src="<%=story.user.image%>" class="circle responsive-img img-samll">
            </div>
            <div class="card-action">
                <a href="/stories/user/<%=story.user._id%>">More From <%= story.user.firstName %></a>
            </div>

        </div>
    </div>

</div>